    <!-- <link rel="stylesheet" href="styles.css" /> -->
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
        padding: 20px;
      }

      .citation-container {
        background-color: white;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        width: 600px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }

      .button-container {
        margin: 10px 0;
      }

      button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }

      .citation-container h1,
      .citation-container h2 {
        text-align: center;
        margin-bottom: 20px;
      }

      .citation-details,
      .fee-section,
      .violation-info {
        margin-bottom: 20px;
      }

      .citation-details p,
      .fee-section p,
      .violation-info p {
        margin: 10px 0;
      }

      .fee-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }

      .fee-text {
        flex: 1;
      }

      .qr-code {
        width: 100px;
        height: 100px;
        margin-right: 20px;
      }

      .images-section {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
      }

      .image {
        text-align: center;
        margin-right: 10px;
      }

      .image img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 4px;
      }
    </style>
  </head>
  <body>
    <div class="citation-container" id="citation">
      <h1>Private Parking Violation</h1>
      <h2>Citation</h2>
      <hr />
      <div class="citation-details">
        <p><strong>Reason:</strong> <%= reason %></p>
        <p><strong>Invoice Status:</strong> <%= invoiceStatus %></p>
        <p><strong>Additional Notes:</strong> <%= additionalNotes %></p>
        <p>
          <strong>Authorization Status:</strong> <%= authorizationStatus ?
          'Authorized' : 'Unauthorized' %>
        </p>
      </div>
      <div class="fee-section">
        <div class="fee-text">
          <p>
            <strong>CLEAN & RELEASE FEE:</strong>
            <span class="fee-amount">$<%= paymentAmount %></span>
          </p>
          <p>
            <a href="https://square.link/u/OJkZjq08"
              >https://square.link/u/OJkZjq08</a
            >
          </p>
        </div>
        <img
          src="http://res.cloudinary.com/dkn9dhb6l/image/upload/v1717609827/xyak6zyoqivezbpn9jvq.png"
          alt="QR Code"
          class="qr-code"
        />
      </div>
      <div class="violation-info">
        <p><strong>Reason:</strong> <%= reason %></p>
        <p><strong>Invoice Status:</strong> <%= invoiceStatus %></p>
        <p><strong>Additional Notes:</strong> <%= additionalNotes %></p>
      </div>
      <div class="images-section">
        <div class="image">
          <p><strong>DEVICE ID IMAGE</strong></p>
          <td><img src="<%= deviceIDImage %>" alt="Device ID Image" /></td>
        </div>
        <div class="image">
          <p><strong>VIOLATION IMAGE</strong></p>
          <img
            src="<%= unauthorizedParkingImage %>"
            alt="Unauthorized Parking Image"
          />
        </div>
        <div class="image">
          <p><strong>VIOLATION LOCATION</strong></p>
          <img src="<%= violationLocationImage %>" alt="Violation Location" />
        </div>
      </div>
    </div>

    <div class="button-container">
      <button onclick="downloadPDF()">Download PDF</button>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script>
      function downloadPDF() {
        const { jsPDF } = window.jspdf;
        const citation = document.getElementById("citation");
        html2canvas(citation).then((canvas) => {
          const imgData = canvas.toDataURL("image/png");
          const pdf = new jsPDF("p", "mm", "a4");
          const imgProps = pdf.getImageProperties(imgData);
          const pdfWidth = pdf.internal.pageSize.getWidth();
          const pdfHeight = (imgProps.height * pdfWidth) / imgProps.width;
          pdf.addImage(imgData, "PNG", 0, 0, pdfWidth, pdfHeight);
          pdf.save("citation.pdf");
        });
      }
    </script>
  </body>
</html>

